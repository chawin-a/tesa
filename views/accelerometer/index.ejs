<!DOCTYPE html>
<html>
  <head>
    <title>Accelerometer</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="container">
      <h3><a href="/accelerometer/get">Get Accelerometer</a></h3>
      <h1>Accelerometer</h1>
      <% if(accelerometer.length>0) { %>
      <table class="list-table">
        <thead>
          <tr>
            <th>TeamID</th>
            <th>sensID</th>
            <th>val_x</th>
            <th>val_y</th>
            <th>val_z</th>
            <th>date</th>
          </tr>
        </thead>
        <tbody>

          <% for(var i=0; i<accelerometer.length;i++) { %>
            <tr>
              <td><%= accelerometer[i].TeamID %></td>
              <td><%= accelerometer[i].sensID %></td>
              <td><%= accelerometer[i].val_x %></td>
              <td><%= accelerometer[i].val_y %></td>
              <td><%= accelerometer[i].val_z %></td>
              <td><%= accelerometer[i].date %></td>
            </tr>
          <% } %>
        </tbody>
      </table> 
      <% } else { %>
        <div>No accelerometer found.</div>
      <% } %>
    </div>
  </body>
</html>
